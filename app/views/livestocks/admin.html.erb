<h1>Listing livestocks</h1>

<style>

table {
  width: 1200px;
}

</style>

<table>
  <thead>
    <tr>
      <th colspan="10"></th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <th>Tag #</th>
      <th>Age</th>
      <th>Breed</th>
      <th>Grade</th>
      <th>Weight</th>
      <th>Gender</th>
      <th>Delivery Date</th>
      <th>Seller</th>
      <th>Email</th>
      <th>Location</th>
      <th>Photo</th>
      <th>Photo File Name</th>
      <th colspan="3">Actions</th>
    </tr>
    <% @livestocks.each do |livestock| %>
      <tr>
        <td><%= livestock.tag %></td>
        <td><%= livestock.age %></td>
        <td><%= livestock.breed %></td>
        <td><%= livestock.weight %></td>
        <td><%= livestock.grade %></td>
        <td><%= livestock.gender %></td>
        <td><%= livestock.delivery_date %></td>
        <td><%= livestock.seller %></td>
        <td><%= livestock.email %></td>
        <td><%= livestock.location %></td>
        <td><%= livestock.photo %></td>
        <td><%= livestock.photo_file_name %></td>
        <td><%= link_to 'Show', livestock %></td>
        <td><%= link_to 'Edit', edit_livestock_path(livestock) %></td>
        <td><%= link_to 'Destroy', livestock, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Livestock', new_livestock_path %>