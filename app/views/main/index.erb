          <button class="btn-primary step-one" style="width: 100%">Next</button>
        </form>
      </div>

      <div class="form-page-two" style="display: none">
        <form>
          <input type="text" class="form-control modal-input" name="seller" placeholder="Seller" required>
          <input type="email" class="form-control modal-input" name="phone" placeholder="Phone Number" autocomplete="off" required>
          <select class="form-control" name="location">
            <option>Coastal Region</option>
